# -*- conf -*-
[user]
    name = Jaseem Abid
    email = me@jabid.in
[init]
    defaultBranch = main
[github]
    username = jaseemabid
[apply]
    whitespace = fix
[grep]
    lineNumber = true
[core]
    whitespace = trailing-space,space-before-tab
    excludesfile = ~/.gitignore
    pager = diff-so-fancy | less --tabs=4 -RFX
[color]
	ui = true
[push]
    default = current
[alias]
    authors = shortlog -sn
    b = branch
    c = commit
    conflits = diff --name-only --diff-filter=U
    cp = cherry-pick
    l = log --oneline --no-decorate -10
    ll = log --oneline --graph --decorate -20
    last = log -1 --oneline --no-decorate
    lasttag = describe --tags --abbrev=0
    meh = commit --amend --no-edit
    ours = "!f() { git checkout --ours -- $@ && git add -- $@; }; f"
    pill = pull
    r = rebase
    s = status -uno
    serve = !git daemon --base-path=. --export-all --reuseaddr --informative-errors --verbose
    sync = !git pull --rebase && git push
    theirs = "!f() { git checkout --theirs -- $@ && git add -- $@; }; f"
    today = diff @{yesterday}.. --stat
    xxx = !git reset --hard HEAD && git clean -xfd
[format]
    signoff = true
[pull]
	rebase = true
[rebase]
    autosquash = true
	autoStash = true
[credential]
    helper = cache --timeout 36000
[help]
    autocorrect = 1
[diff]
    compactionHeuristic = true
	renames = true
[sendemail]
    smtpuser = jaseemabid@gmail.com
    smtpserver = smtp.googlemail.com
    smtpencryption = tls
    smtpserverport = 587
[remote "origin"]
    prune = true
[commit]
    verbose = true
[tig]
    mailmap = yes
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[submodule]
	recurse = false
[http]
	postBuffer = 524288000
