#-----------------------------------------------
# Slate template file, thanks to Jeryn
#-----------------------------------------------

config checkDefaultsOnLoad              true
config defaultToCurrentScreen           true
config focusCheckWidthMax               3000
config secondsBetweenRepeat             0.1

# Abstract positions
alias full              move screenOriginX;screenOriginY                   screenSizeX;screenSizeY
alias lefthalf          move screenOriginX;screenOriginY                   screenSizeX/2;screenSizeY
alias righthalf         move screenOriginX+screenSizeX/2;screenOriginY     screenSizeX/2;screenSizeY
alias center            move screenOriginX+screenSizeX*0.3;screenOriginY   screenSizeX*0.6;screenSizeY

# HYPER KEY
alias hyper cmd

# Location bindings
bind u:${hyper} ${center}
bind left:${hyper} ${lefthalf}
bind right:${hyper} ${righthalf}
bind up:${hyper} ${full}

# Nudge left and right
bind left:cmd,ctrl nudge -100 +0
bind right:cmd,ctrl nudge +100 +0

# Send active window to second monitor
bind down:${hyper} throw next resize

# App bindings
bind 1:${hyper} focus 'Terminal'
bind 2:${hyper} focus 'Code'
bind 3:${hyper} focus 'Arc'
bind 4:${hyper} focus 'Bear'
bind 5:${hyper} focus ''

bind 6:${hyper} focus 'Mail'
bind 7:${hyper} focus 'WhatsApp'
bind 8:${hyper} focus 'Signal'
bind 9:${hyper} focus 'Slack'
bind 0:${hyper} focus ''
